extends ./layouts/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5= pagina
        
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layouts/bloque_testimoniales


        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar un Testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", value=nombre).form-control
                        .form-group
                            label(for="correo") Correo Electr√≥nico
                            input#correo(type="email", placeholder="Tu correo", name="correo", value=correo).form-control
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Tu mensaje", name="mensaje", rows=3).form-control= mensaje
                        
                        input(type="submit").btn.btn-block.btn-success